# Application Settings
APP_NAME=Keel API
APP_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/keel_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# External API Keys (Replace with your real keys)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Configuration
CORS_ORIGINS=["*"]

# Security Configuration
SECRET_KEY=your-super-secret-jwt-key-that-is-at-least-32-characters-long-for-development
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication Settings
AUTH_JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
AUTH_JWT_ALGO=HS256
AUTH_ACCESS_TOKEN_EXPIRES_MIN=43200
AUTH_REFRESH_TOKEN_EXPIRES_DAYS=30
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_BCRYPT_ROUNDS=12
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION_MINUTES=15
